<h1 align="center">Listing all Categories</h1>
<div align="center">
  <%= will_paginate %>
</div>
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class= "center article-title">
            <%= link_to "#{category.name}", category_path(category) %>
            
          </li>
          <li class="center"><small><%= pluralize(category.articles.count, "article") if category.articles %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
<div align="center">
  <%= will_paginate %>
</div>
